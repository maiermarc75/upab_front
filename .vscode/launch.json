{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "WSL Chrome",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/src",
        "sourceMapPathOverrides": {
          "/*": "/__vscode-remote-uri__/*"
        },
        "sourceMaps": true,
        "smartStep": true,
        "outFiles": [
          "${workspaceFolder}/**/*.js",
          "!**/node_modules/**"
        ]
      },
